{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node",
            "config": {
                "maxDuration": 60,
                "memory": 3008,
                "nodeVersion": "18.x"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server.js"
        },
        {
            "src": "/(.*)",
            "dest": "server.js"
        }
    ],
    "env": {
        "NODE_ENV": "production",
        "HOST": "0.0.0.0",
        "PORT": "3011",
        "DBHOST": "@dbhost",
        "DBNAME": "@dbname",
        "DBUSER": "@dbuser",
        "DBPASS": "@dbpass",
        "DBPORT": "@dbport",
        "JWTKEY": "@jwtkey",
        "FRONTENDURI": "@frontenduri",
        "BACKURI": "@backuri"
    }
} 