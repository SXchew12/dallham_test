generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Admin Model
model Admin {
  id        Int      @id @default(autoincrement())
  role      String   @default("admin")
  uid       String?  @unique
  email     String?  @unique
  password  String?
  createdAt DateTime @default(now())

  @@map("admin")
}

// API Keys Model
model ApiKeys {
  id                Int      @id @default(autoincrement())
  open_ai           String?
  gemini_ai         String?
  stable_diffusion  String?
  createdAt         DateTime @default(now())

  @@map("api_keys")
}

// User Model
model User {
  id           Int      @id @default(autoincrement())
  role         String   @default("user")
  uid          String?  @unique
  name         String?
  email        String?  @unique
  password     String?
  mobile       String?
  timezone     String   @default("UTC")
  plan         String?  @db.Text
  plan_expire  String?
  trial        Int      @default(0)
  api_key      String?
  gemini_token String   @default("0")
  openai_token String   @default("0")
  createdAt    DateTime @default(now())

  @@map("user")
}

// Plan Model
model Plan {
  id              Int      @id @default(autoincrement())
  name            String?
  price           String?  @default("0")
  in_app_chat     Int      @default(0)
  image_maker     Int      @default(0)
  code_writer     Int      @default(0)
  speech_to_text  Int      @default(0)
  voice_maker     Int      @default(0)
  ai_video        Int      @default(0)
  validity_days   String?  @default("0")
  gemini_token    String?  @default("0")
  openai_token    String?  @default("0")
  createdAt       DateTime @default(now())

  @@map("plan")
}

// AI Image Model
model AiImage {
  id          Int      @id @default(autoincrement())
  uid         String?
  ai_type     String?
  image_size  String?
  image_style String?
  prompt      String?
  filename    String?
  createdAt   DateTime @default(now())

  @@map("ai_image")
}

// AI Speech Model
model AiSpeech {
  id        Int      @id @default(autoincrement())
  uid       String?
  type      String?
  filename  String?
  output    String?
  createdAt DateTime @default(now())

  @@map("ai_speech")
}

// AI Voice Model
model AiVoice {
  id        Int      @id @default(autoincrement())
  uid       String?
  prompt    String?
  voice     String?
  filename  String?
  createdAt DateTime @default(now())

  @@map("ai_voice")
}

// Web Private Model
model WebPrivate {
  id              Int      @id @default(autoincrement())
  offline_active  String?  @default("0")
  stripe_active   String?  @default("0")
  paystack_active String?  @default("0")
  createdAt       DateTime @default(now())

  @@map("web_private")
}

// Web Public Model
model WebPublic {
  id                 Int      @id @default(autoincrement())
  currency_code      String?
  logo               String?
  app_name           String?
  custom_home        String?
  is_custom_home     Int      @default(0)
  meta_description   String?  @db.Text
  currency_symbol    String?
  home_page_tutorial String?
  login_header_footer Int     @default(0)
  exchange_rate      String?
  createdAt          DateTime @default(now())

  @@map("web_public")
}

// AI Model
model AiModel {
  id        Int      @id @default(autoincrement())
  uid       String?
  model_name String?
  prompt    String?  @db.Text
  response  String?  @db.Text
  createdAt DateTime @default(now())

  @@map("ai_model")
}

// Chat
model Chat {
  id         Int      @id @default(autoincrement())
  uid        String?
  model_name String?
  prompt     String?  @db.Text
  response   String?  @db.Text
  createdAt  DateTime @default(now())

  @@map("chat")
}

// Contact Form
model ContactForm {
  id        Int      @id @default(autoincrement())
  name      String?
  email     String?
  subject   String?
  message   String?  @db.Text
  createdAt DateTime @default(now())

  @@map("contact_form")
}

// Embed Chatbot
model EmbedChatbot {
  id        Int      @id @default(autoincrement())
  uid       String?
  name      String?
  prompt    String?  @db.Text
  response  String?  @db.Text
  createdAt DateTime @default(now())

  @@map("embed_chatbot")
}

// Embed Chats
model EmbedChats {
  id         Int      @id @default(autoincrement())
  uid        String?
  chatbot_id String?
  prompt     String?  @db.Text
  response   String?  @db.Text
  createdAt  DateTime @default(now())

  @@map("embed_chats")
}

// Orders
model Orders {
  id         Int      @id @default(autoincrement())
  uid        String?
  order_id   String?
  plan_id    String?
  payment_id String?
  price      String?
  currency   String?
  payment_by String?
  status     String?
  createdAt  DateTime @default(now())

  @@map("orders")
}

// SMTP
model Smtp {
  id        Int      @id @default(autoincrement())
  host      String?
  port      String?
  user      String?
  pass      String?
  createdAt DateTime @default(now())

  @@map("smtp")
}

// Partners
model Partners {
  id        Int      @id @default(autoincrement())
  filename  String?
  createdAt DateTime @default(now())

  @@map("partners")
}

// FAQ
model Faq {
  id        Int      @id @default(autoincrement())
  question  String?  @db.Text
  answer    String?  @db.Text
  createdAt DateTime @default(now())

  @@map("faq")
}

// Page
model Page {
  id        Int      @id @default(autoincrement())
  slug      String?
  title     String?
  image     String?
  content   String?  @db.Text
  permanent Int      @default(0)
  createdAt DateTime @default(now())

  @@map("page")
}

// Testimonial
model Testimonial {
  id                Int      @id @default(autoincrement())
  title            String?
  description      String?  @db.Text
  reviewer_name    String?
  reviewer_position String?
  createdAt        DateTime @default(now())

  @@map("testimonial")
}